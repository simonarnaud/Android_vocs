<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_page_princ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vocs.com.vocs.PagePrinc">

    <ImageButton
        android:text="Mode de jeux"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/modejeux"
        android:src="@drawable/manettes"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Bienvenue sur Vocs!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:layout_below="@+id/parametres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp" />

    <ImageButton
        android:text="Liste"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/liste"
        android:src="@drawable/liste"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Traduction"
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tradliste"
        android:layout_above="@+id/modejeux"
        android:layout_alignRight="@+id/modejeux"
        android:layout_alignEnd="@+id/modejeux"
        android:layout_marginBottom="85dp" />

    <ImageButton
        android:text="parametres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parametre"
        android:id="@+id/parametres"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
