<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page_princ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vocs.com.vocs.PagePrinc">

    <Button
        android:text="Liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/liste"
        android:layout_alignBottom="@+id/traduction"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:text="Bienvenue sur Vocs!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:layout_above="@+id/traduction"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp" />

    <Button
        android:text="parametres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parametres"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Traduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:id="@+id/traduction"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:text="Traduction Ã  partir d'une liste"
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tradliste"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/liste"
        android:layout_alignEnd="@+id/liste" />
</RelativeLayout>
